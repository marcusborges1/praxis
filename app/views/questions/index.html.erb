<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1>Questões</h1>
    <%= link_to 'Fatores de Avaliacao', evaluation_factors_path, class: "btn btn-primary" %>
  </div>
  <p id="notice"><%= notice %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Fator de Avaliação</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= link_to question.description, question %></td>
          <td><%= question.evaluation_factor_name %></td>
          <td colspan=3>
            <div class="btn-toolbar pull-right">
              <%= link_to edit_question_path(question),
                data: { toggle: 'tooltip' },
                title: "Editar Questão",
                class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-edit"></i>
              <% end %>
              <%= link_to question, method: :delete,
                data: { confirm: 'Tem certeza?', toogle: 'tooltip' },
                title: "Deletar Questão"
                class: "btn btn-danger" do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Cadastrar nova questão', new_question_path, class: "btn btn-primary" %>
</div>
