<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">Questão - Detalhes</div>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>
      <p>
        <b>Fator de avaliação:</b> <%= @question.evaluation_factor.name %>
      </p>
      <p>
        <b>Descrição:</b> <%= @question.description %>
      </p>
      <hr/>

      <% @question.options.each_with_index do |option, index| %>
        <div class="row">
          <div class="col-sm-6">
            <b>Opção <%= index + 1 %>:</b> <p><%= option.description %></p>
          </div>
          <div class="col-sm-6">
            <b>Peso: </b><%= option.weight %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= link_to 'Editar', edit_question_path(@question), class: "btn btn-primary" %>
      <%= link_to 'Voltar', questions_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
