<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">Modelo de Avaliação - Detalhes</div>
    <p id="notice"><%= notice %></p>
    <div class="panel-body">

      <p>
        <strong>Membro:</strong>
        <%= @answer_group.user.name %>
      </p>

      <p>
        <strong>Respostas das Questões:</strong>
        <div class="list-group">
          <% @answer_group.answers.each do |answer| %>
            <a class="list-group-item">
              <h5 class="list-group-item-heading"><%= answer.question_value.description %></h5>
              <p class="list-group-item-text"><%= answer.option.weight unless answer.option.nil? %></p>
            </a>
          <% end %>
        </div>
      </p>
    </div>

    <div class="panel-footer">
      <%= link_to 'Voltar', evaluation_path(@answer_group.evaluation), class: "btn btn-default" %>
    </div>
  </div>
</div>
