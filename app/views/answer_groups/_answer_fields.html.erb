<div class="nested-fields">
  <div class="form-group">
    <div class="col-sm-5 control-label">
      <%= question_value.question.description %>
    </div>
    <div class="col-sm-7">
      <% question_value.options.order(weight: :asc).each do |option| %>
        <% if question_value.options.last == option %>
          <%= f.label :option_id, option.description %>
        <% end %>
        <%= f.radio_button :option_id, option.id %>
        <% if question_value.options.first == option %>
          <%= f.label :option_id, option.description %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
