<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">Modelo de Avaliação - Detalhes</div>
    <p id="notice"><%= notice %></p>
    <div class="panel-body">
      <p>
        <strong>Data de Inicio:</strong>
        <%= @evaluation.start_date %>
      </p>

      <p>
        <strong>Data de Termino:</strong>
        <%= @evaluation.finish_date %>
      </p>

      <p>
        <strong>Modelo de Avaliação:</strong>
        <%= @evaluation.evaluation_model.name %>
      </p>
      <p>
        <strong>Respostas</strong>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Membro</th>
              <th>Respondido?</th>
            </tr>
          </thead>
          <% @evaluation.answer_groups.each do |answer| %>
            <tbody>
              <tr>
                <td><%= answer.user.name %></td>
                <% if answer.answered %>
                  <td class="glyphicon glyphicon-ok"></td>
                <% else %>
                  <td class="glyphicon glyphicon-remove"></td>
                  <td><%= link_to 'Responder', edit_answer_group_path(answer), class: 'btn btn-default' %></td>
                <% end %>
              </tr>
            </tbody>
          <% end %>
          </table>
        </p>
      </div>

      <div class="panel-footer">
        <%= link_to 'Editar', edit_evaluation_path(@evaluation), class: "btn btn-primary" %>
        <%= link_to 'Back', evaluations_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
