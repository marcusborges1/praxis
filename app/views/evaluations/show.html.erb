<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">Avaliação - Detalhes</div>
    <p id="notice"><%= notice %></p>
    <div class="panel-body">
      <p>
        <strong>Avaliação:</strong>
        <%= @evaluation.name %>
      </p>
      <p>
        <strong>Data de Inicio:</strong>
        <%= @evaluation.start_date %>
      </p>

      <p>
        <strong>Data de Termino:</strong>
        <%= @evaluation.finish_date %>
      </p>

      <p>
        <strong>Modelo de Avaliação:</strong>
        <%= @evaluation.evaluation_model_name %>
      </p>

      <p>
        <strong>Ciclo da Avaliação:</strong>
        <%= @evaluation.evaluation_cycle_duration_period %>
      </p>
      <p>
        <strong>Respostas</strong>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Avaliado</th>
              <th></th>
            </tr>
          </thead>
          <% @evaluation.members.each do |member| %>
            <tbody>
              <tr>
                <td><%= member.name %></td>
                <td><%= link_to 'Ver Respostas', answer_group_user_evaluation_path(@evaluation, member.answer_groups.first, member), target: "_blank",
                  class: 'btn btn-default' %></td>
              </tr>
            </tbody>
          <% end %>
          </table>
        </p>
      </div>

      <div class="panel-footer">
        <%= link_to 'Editar', edit_evaluation_path(@evaluation), class: "btn btn-primary" %>
        <%= link_to 'Voltar', evaluations_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
