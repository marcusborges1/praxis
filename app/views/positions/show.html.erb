<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">Cargo - Detalhes</div>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>
      <p>
        <b>Nome: </b> <%= @position.name %>
      </p>
      <p>
        <b>Tipo de cargo: </b> <%= translate_context(@position.context) %>
      </p>
    </div>
    <div class="panel-footer">
      <%= link_to 'Editar Cargo', edit_position_path(@position), class: "btn btn-primary" %>
      <%= link_to 'Voltar', positions_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
