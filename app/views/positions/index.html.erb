<div class="col-md-8 col-md-offset-2">
  <div class="page-header">
    <h1>Cargos</h1>
  </div>
  <p id="notice"><%= notice %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @positions.each do |position| %>
        <tr>
          <td><%= link_to position.name, position %></td>
          <td>
            <div class="btn-toolbar pull-right">
              <%= link_to edit_position_path(position),
                data: { toggle: 'tooltip' },
                title: "Editar Cargo",
                class: "btn btn-default" do %>
                  <i class="glyphicon glyphicon-edit"></i>
              <% end %>
              <%= link_to position, method: :delete,
                data: { toggle:'tooltip', confirm: 'VocÃª tem certeza que deseja apagar esse cargo?' },
                title: "Deletar Cargo",
                class: "btn btn-danger" do %>
                  <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= will_paginate @positions %>
  </div>
  <%= link_to 'Cadastrar Novo Cargo', new_position_path, class: "btn btn-primary" %>
</div>
