<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1>Cargos</h1>
  </div>
  <p id="notice"><%= notice %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
      </tr>
    </thead>
    <tbody>
      <% @positions.each do |position| %>
        <tr>
          <td><%= link_to position.name, position %></td>
          <td>
            <div class="btn-toolbar pull-right">
              <%= link_to edit_position_path(position), class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-edit"></i>
              <% end %>
              <%= link_to position, method: :delete,
                data: { confirm: 'VocÃª tem certeza que deseja apagar esse cargo?' },
                class: "btn btn-danger" do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Cadastrar Novo Cargo', new_position_path, class: "btn btn-primary" %>
</div>
