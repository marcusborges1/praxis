<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1>Ciclos de Avaliação</h1>
  </div>
  <p id="notice"><%= notice %></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Data do início</th>
        <th>Data do fim</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @evaluation_cycles.each do |evaluation_cycle| %>
        <tr>
          <td><%= evaluation_cycle.initial_date %></td>
          <td><%= evaluation_cycle.end_date %></td>
          <td>
            <div class="pull-right">
              <%= link_to edit_evaluation_cycle_path(evaluation_cycle), class: "btn btn-default" do %>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %>
              <%= link_to evaluation_cycle, method: :delete, data: { confirm: 'Tem certeza?' },
                class: "btn btn-danger" do %>
                  <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Cadastrar novo Ciclo de Avaliação', new_evaluation_cycle_path, class: "btn btn-primary" %>
</div>
