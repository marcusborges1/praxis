<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1>Fatores de Avaliação</h1>
  </div>
  <p id="notice"><%= notice %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @evaluation_factors.each do |evaluation_factor| %>
        <tr>
          <td><%= link_to evaluation_factor.name, evaluation_factor %></td>
          <td>
            <div class="btn-toolbar pull-right">
              <%= link_to edit_evaluation_factor_path(evaluation_factor), class: "btn btn-default" do %><i class="glyphicon glyphicon-edit"></i><% end %>
              <%= link_to evaluation_factor, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" do %><i class="glyphicon glyphicon-trash"></i><% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Cadastrar novo Fator de Avaliação', new_evaluation_factor_path, class: 'btn btn-primary' %>
</div>
