<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1>Diretorias</h1>
  </div>
  <p id="notice"><%= notice %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Diretor</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @sectors.each do |sector| %>
        <tr>
          <td><%= link_to sector.name, sector %></td>
          <td></td>
          <td>
            <div class="btn-toolbar pull-right">
              <%= link_to edit_sector_path(sector), class: "btn btn-default" do %><i class="glyphicon glyphicon-edit"></i><% end %>
              <%= link_to sector, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" do %><i class="glyphicon glyphicon-trash"></i><% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Nova Diretoria', new_sector_path, class: 'btn btn-primary' %>
</div>
