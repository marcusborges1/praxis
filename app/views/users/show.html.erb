<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">Membro - Detalhes</div>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>
      <p>
        <b>Nome:</b> <%= @user.name %>
      </p>
      <p>
        <b>Diretoria:</b> <%= @user.sector_name %>
      </p>
      <p>
        <b>Cargo:</b> <%#= @user.position_name %>
      </p>
    </div>
    <div class="panel-footer">
      <%= link_to 'Editar Membro', edit_user_path(@user), class: "btn btn-primary" %>
      <%= link_to 'Voltar', users_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
