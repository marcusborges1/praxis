<%= form_for(user, html: { class: "form-horizontal" }) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <%# <li><%= message %1></li> %>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nome", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", placeholder: "Nome do membro" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :position_id, "Cargo", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.collection_select :position_id, @positions, :id, :name, { prompt: "- Selecione -" }, class: "form-control"  %>
    </div>
  </div>

  <%= f.submit "Salvar", class: "btn btn-primary" %>
<% end %>
