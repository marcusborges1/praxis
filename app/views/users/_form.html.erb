<%= form_for(user, html: { class: "form-horizontal" }) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nome", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", placeholder: "Nome do membro" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :position_ids, "Cargo Institucional", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.collection_select :position_ids, Position.institutional_context, :id, :name, { prompt: "- Selecione -" }, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :sector_id, "Diretoria", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.collection_select :sector_id, Sector.all, :id, :name, { prompt: "- Selecione -" }, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: "form-control", placeholder: "exemplo@praxisconsultoria.org.br" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Senha", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.password_field :password, class: "form-control", placeholder: "Senha do membro" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmação da senha", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repita a senha" %>
    </div>
  </div>

  <%= f.submit "Salvar", class: "btn btn-primary" %>
<% end %>
